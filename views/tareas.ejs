<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../public/utils/head.html") %>
    <!-- Importar CSS específicos -->
    <link rel="stylesheet" href="/css/listarTareasStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


    <!-- Importar JS específicos -->

</head>

<body data-response="<%= JSON.stringify(response) %>">
    <!-- Importar modal error -->
    <%- include("../public/utils/modal.html") %>
     
    <!-- Importar nav -->
    <%- include("nav", { generalInfo: generalInfo }) %>
    <div class="row">
        <div class="col-md-4 headContainer">
            <h1>TAREAS</h1>
        </div>
        <div class="contenedorTareas">
            <% tareas.forEach( t=> { %>
                <a href="/tarea/<%= t.id %>">
                    <div class="border border-dark mx-2 my-3" style="display: flex;">
                        <div class="d-flex">
                            <p>
                               <!-- <%= t.foto %>-->
                            </p>
                        </div>
                        <div>
                            <p>
                                <%= t.título %>
                            </p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>

    </div>
        
        <!-- text to voice button -->
</body>

</html>