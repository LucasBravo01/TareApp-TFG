<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../public/utils/head.html") %>
    <link rel="stylesheet" href="/css/dailyCalendar.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <%- include("nav") %>

    <div class="row mt-3">
        <div class="col-4 text-start">
            <a class="btnCreateTask" href="/tareas/crearTarea">
                <span class="material-symbols-outlined">add_box</span>
            </a>
        </div>
    
        <div class="col-8 text-end"> 
            <a class="btn btnList" href="/">
                <span class="material-symbols-outlined">view_list</span>
            </a>
            <a class="btn btnWeek" href="/tareas/semanal">
                <span class="material-symbols-outlined">calendar_view_week</span>
            </a>
            
            <a class="btn btnDay" href="/tareas/diaria">
                <span class="material-symbols-outlined">calendar_view_day</span>
            </a>
        </div>
    </div> 

    <div class="container-fluid mt-4 calendar" id="daily-calendar-container">
        <div class="row">
            <div class="col-2 hour-column">
                <% for(let hour = 0; hour < 24; hour++) { %>
                    <div class="hour"><%= hour %>:00</div>
                <% } %>
            </div>
            <div class="col-10">
                <div class="row justify-content-between">
                    <div class="col-6 text-start">
                        <a href="/tareas/diaria?currentDate=<%= day.date %>&previous=true" class="btn">
                            <span class="material-symbols-outlined">arrow_back</span>
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        <a href="/tareas/diaria?currentDate=<%= day.date %>&previous=false" class="btn">
                            <span class="material-symbols-outlined">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <div class="day-header"><%= day.dayName %> <%= day.dayNumber %>, <%= day.date %></div>
                <% for(let hour = 0; hour < 24; hour++) { %>
                    <div class="hour-tasks">
                        <% if (tasks[hour] && tasks[hour].length > 0) { %> 
                            <% tasks[hour].forEach(task => { %>
                                <div class="task">
                                    <div class="task-time"><%= task.title %></div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="no-task">No tasks this hour</div>
                        <% } %>
                    </div>
                <% } %>                
            </div>
        </div>
    </div>

</body>
</html>
