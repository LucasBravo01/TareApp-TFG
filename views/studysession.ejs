<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../public/utils/head.html") %>
    <!-- Importar CSS específicos -->
    <link rel="stylesheet" href="/css/<%= session.currentUser.configuration.theme %>/style.css">
    <!-- Importar JS específicos -->
    <script src="/js/studysession.js"></script>
</head>

<body data-response="<%= JSON.stringify(response) %>" data-sessions="<%= JSON.stringify(studySessions) %>" data-user="<%= JSON.stringify(session.currentUser) %>">
    <!-- Importar modal error -->
    <%- include("../public/utils/modal.html") %>
    <!-- Importar nav -->
    <%- include("fragments/nav") %>

    <div class="container">
        <!--TÍTULO Y BOTÓN DE ATRÁS-->
        <div>
            <div id="div-sb-backToForm" style="display: none;" class="float-start">
                <button type="button"  data-bs-toggle="modal" data-bs-target="#modal-backToForm" class="main-button">Atrás</button> 
            </div>
            <h1 class="title" style="text-align: center;">
                SESIÓN DE ESTUDIO
            </h1>
        </div>

        <!--MODAL BOTÓN DE ATRÁS-->
        <div class="modal fade" id="modal-backToForm" tabindex="-1" aria-labelledby="label-modal-backToForm" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">¿Estás seguro que quieres volver atrás?</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Si vuelves atrás, se perderá todo tu progreso de la sesión de estudio iniciada.
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-bs-dismiss="modal" class="button main-button">Continuar sesión</button>
                        <button type="button" onclick="window.location.href='/sesionEstudio/sesionEstudio'" class="button dangerous-button">Volver atrás</button>
                    </div>
                </div>
            </div>
        </div>

        <!--SELECCIÓN/CREACIÓN DE SESIÓN DE ESTUDIO-->
        <form id="form-studySession">
            <div class="row justify-content-center mt-3 mb-3">
                <!--SELECCIONAR SESIÓN DE ESTUDIO-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-study-session">Seleccionar sesión de estudio</label>
                    <select id="input-study-session" name="study-session" class="form-control">
                        <option value="Nueva">Nueva</option>
                        <% studySessions.forEach( (s, i) => { %>
                            <option value="<%= i %>"><%= s.name %></option>
                        <% }); %>
                    </select>
                </div>

                <!--NOMBRE-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-name" id="label-input-name">Nombre nueva sesión *</label>
                    <input type="text" id="input-name" name="name" class="form-control">
                </div>
            </div>
                
            <div class="row justify-content-center mt-3 mb-3">
                <!--TIEMPO DE ESTUDIO-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-study-slot">Duración periodo de estudio (minutos) *</label>
                    <input type="number" id="input-study-slot" name="study-slot" min="1" max="90" step="5" class="form-control">
                </div>

                <!--TIEMPO DE DESCANSO-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-brake-slot">Duración periodo de descanso (minutos) *</label>
                    <input type="number" id="input-brake-slot" name="brake-slot" min="1" max="90" step="5" class="form-control">
                </div>

                <!--NÚMERO DE PERIODOS-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-number-slots">Número de periodos *</label>
                    <input type="number" id="input-number-slots" name="number-slots" min="1" max="10" step="1" class="form-control">
                </div>
                    
                <!--TIEMPO DE DESCANSO LARGO-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-long-brake-slot">Duración periodo descanso largo (minutos)</label>
                    <input type="number" id="input-long-brake-slot" name="long-brake-slot" min="0" max="90" step="5" class="form-control">
                </div>

                <!--PERIOCIDAD PERIODOS DE DESCANSO LARGO-->
                <div class="col-lg-4 col-md-6 col-sm-6 col-10 text-center mt-3 d-flex flex-column justify-content-end align-items-center">
                    <label for="input-number-long-brake-slots">Cada cuántos periodos se realiza uno largo</label>
                    <input type="number" id="input-number-long-brake-slots" name="number-long-brake-slots" min="0" max="10" step="1" class="form-control">
                </div>
            </div>

            <div class="row justify-content-center mt-3 mb-3">
                <div class="col-lg-3 col-md-6 col-sm-6 col-10 text-center mt-3 me-3">
                    <button type="button" id="input-sb-selectStudySession" class="button main-button">Configurar temporizador</button>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6 col-10 text-center mt-3 me-3">
                    <button type="submit" id="input-sb-createStudySession" class="button main-button">Configurar y guardar</button>
                </div>
            </div>
        </form>    
        

        <div class="row justify-content-center mt-3 mb-3">
            <!--TEMPORIZADOR-->
            <div id="div-timer" class="col-lg-6 col-md-6 col-sm-6 col-7 me-4 mb-4 display-timer" style="display: none;">
                <!--SUBTITULO TEMPORIZADOR-->
                <div class="col-12 text-center mt-3">
                    <p class="text-start subtitle">Temporizador</p>
                    <hr class="separator-line" />
                </div>

                <div class="d-flex justify-content-start">
                    <span id="span-whichPeriod" class="mx-3"></span>
                    <span id="span-numSlot" class="mx-3"></span>
                </div>

                <div class="d-flex justify-content-center div-timer">
                    <span id="span-minsTimer">00</span>:<span id="span-secsTimer">00</span>
                </div>
    
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-10 text-center mt-1 me-1">
                        <button type="button" id="input-startTimer" onclick="startTimer();" class="button view-non-selected-button">Iniciar</button>
                    </div>
    
                    <div class="col-lg-2 col-md-4 col-sm-6 col-10 text-center mt-1 me-1">
                        <button type="button" id="input-stopTimer" onclick="stopTimer();" class="button view-selected-button" disabled>Pausar</button>
                    </div>
    
                    <div class="col-lg-3 col-md-4 col-sm-6 col-10 text-center mt-1 me-1">
                        <button type="button" id="input-resumeTimer" onclick="startTimer();" class="button view-non-selected-button" disabled>Continuar</button>
                    </div>
    
                    <div class="col-lg-3 col-md-4 col-sm-6 col-10 text-center mt-1 me-1">
                        <button type="button" id="input-resetTimer" onclick="resetTimer();" class="button dangerous-button" disabled>Resetear</button>
                    </div>
                </div>

                <audio id="audio-endTimer" src="/images/endTimerSound.mp3" preload="auto"></audio>
            </div>

            <!--TAREAS-->
            <div id="div-tasks" style="display: none;" class="col-lg-5 col-md-6 col-sm-6 col-5 mb-4">
                <!--SUBTITULO TAREAS PENDIENTES-->
                <div class="col-12 text-center mt-3">
                    <p class="text-start subtitle">Tareas pendientes</p>
                    <hr class="separator-line" />
                </div>

                <!--LISTA DE TAREAS PENDIENTES-->
                <div id="accordion-tasksNotCompleted" class="accordion">
                    <% tasks.forEach( t=> { %>
                        <% if (!t.completed) { %>
                            <div class="mb-3">
                                <button class="accordion-button collapsed accordion-task <% if(session.currentUser.configuration.theme === "alegre") { if (t.subject_color) { %> <%= t.subject_color %> <% } else { %> <%= t.category_color %> <% } } else { %> main-background <% } %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= t.id %>" aria-expanded="false" aria-controls="collapse<%= t.id %>">
                                    <% if(session.currentUser.configuration.theme === "alegre") { %>
                                        <span class="accordion-icon"><% if(t.subject_icon){ %>   <%- t.subject_icon %>  <% }else{ %>  <%- t.category_icon %>  <% }%></span>
                                    <% } else { %>
                                        <img class="accordion-img" src="/images/subjects-categories/<% if(t.subject_photo){ %><%= t.subject_photo %><% }else{ %><%= t.category_photo %><% }%>" alt="Icono categoría" width="15"/>
                                    <% } %>
                                    
                                    <span class="accordion-text mx-2"><%= t.title %></span>
                                </button>

                                <div id="collapse<%= t.id %>" class="accordion-collapse collapse" data-bs-parent="#accordion-tasksNotCompleted">
                                    <div class="accordion-body d-flex flex-column">
                                        <span><strong>Fecha y hora de entrega:</strong> <%= t.date %> <%= t.time %></span>
                                        <% if(t.category === "Escolar") { %>
                                            <span><strong>Asignatura:</strong> <%= t.name %></span>
                                        <% } else { %>
                                            <span><strong>Categoria:</strong> <%= t.category %></span>
                                        <% } %>
                                        <% if(t.description === "") { %>
                                            <span>No hay descripción para esta tarea</span>
                                        <% } else { %>
                                            <span><strong>Descripción:</strong> <%= t.description %></span>
                                        <% } %>
                                        <div>
                                            <label for="input-completed-<%= t.id %>"><strong>Completar tarea</strong></label>
                                            <input id="input-completed-<%= t.id %>" name="completed" type="checkbox" class="form-check-input checkbox-completedTask mx-2" <%= t.done ? 'checked' : '' %> data-task="<%= JSON.stringify(t) %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>