<!DOCTYPE html>
<html lang="es">
    
    <head>
        <%- include("../public/utils/head.html") %>
        <!-- Importar CSS específicos -->
        <link rel="stylesheet" href="/css/login_style.css">
        <!-- Importar JS específicos -->
        <script src="/js/login.js"></script>
    </head>

    <body data-response="<%= JSON.stringify(response) %>">
        <!-- Importar modal error -->
        <%- include("../public/utils/modal.html") %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 col-sm-8">
                    <div class="login-box">
                        <h3 class="text-center mb-4">INICIAR SESIÓN</h3>
                        <form id="form-login" action="/login" method="POST">
                            <div class="mb-3">
                                <label for="user" class="form-label">Usuario</label>
                                <input id="input-user" name="user" type="text" value="<%= user %>" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Contraseña</label>
                                <input id="input-password" name="password" type="password" class="form-control">
                            </div>
                            <div class="text-center">
                                <button id="button-login" type="submit" class="login-button">Iniciar sesión</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>