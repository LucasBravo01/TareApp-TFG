<div class="card-task <% if(session.currentUser.configuration.theme === "alegre") { if (t.subjectColor) { %> <%= t.subjectColor %> <% } else { %> <%= t.categoryColor %> <% } } %>">
    <% if(session.currentUser.configuration.theme === "alegre") { %>
        <a href="/tareas/tarea/<%= t.id %>" class="d-grid align-items-center" style="grid-template-columns: 25% 75%;">
            <div class="d-flex justify-content-center">
                <span style="font-size: 2rem;"><% if(t.subjectIcon){ %>   <%- t.subjectIcon %>  <% }else{ %>  <%- t.categoryIcon %>  <% }%></span>
            </div>
            <div class="d-flex justify-content-between">
                <span><%= t.title %></span>
                <span class="arrow-task-button">
                    <img src="/images/<%= session.currentUser.configuration.theme %>/right_arrow.png" alt="Siguiente" width="15"/>
                </span>
            </div>
        </a>
    <% } else { %>
        <a href="/tareas/tarea/<%= t.id %>">
            <div class="d-grid align-items-center" style="grid-template-columns: 25% 75%;">
                <div class="d-flex justify-content-center">
                    <img src="/images/subjects-categories/<% if(t.subjectPhoto){ %><%= t.subjectPhoto %><% }else{ %><%= t.categoryPhoto %><% }%>" alt="Icono categorÃ­a" width="30"/>
                </div>
                <div class="d-flex justify-content-between">
                    <span><%= t.title %></span>
                    <a href="/tareas/tarea/<%= t.id %>" class="arrow-task-button">
                        <img src="/images/<%= session.currentUser.configuration.theme %>/right_arrow.png" alt="Siguiente" width="15"/>
                    </a>
                </div>
            </div>
        </a>
    <% } %>
</div>