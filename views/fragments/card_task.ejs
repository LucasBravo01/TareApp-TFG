<div class="card-task <% if(session.currentUser.configuration.theme === "alegre") { if (t.subjectColor) { %> <%= t.subjectColor %> <% } else { %> <%= t.categoryColor %> <% } } %>">
    <% if(session.currentUser.configuration.theme === "alegre") { %>
        <a href="/tareas/tarea/<%= t.id %>" class="d-grid align-items-center grid-columns-25-75">
            <div class="d-flex justify-content-center">
                <span class="double-font"><% if(t.subjectIcon){ %>   <%- t.subjectIcon %>  <% }else{ %>  <%- t.categoryIcon %>  <% }%></span>
            </div>
            <div class="d-flex justify-content-between">
                <span><%= t.title %></span>
            </div>
        </a>
    <% } else { %>
        <div class="d-grid align-items-center grid-columns-25-75">
            <div class="d-flex justify-content-center">
                <img src="/images/subjects-categories/<% if(t.subjectPhoto){ %><%= t.subjectPhoto %><% }else{ %><%= t.categoryPhoto %><% }%>" alt="Icono categorÃ­a" width="30"/>
            </div>
            <div class="d-flex justify-content-between">
                <span><%= t.title %></span>
                <div class="d-flex flex-column justify-content-center ms-2">
                    <a href="/tareas/tarea/<%= t.id %>" class="arrow-task-button">
                        <img src="/images/<%= session.currentUser.configuration.theme %>/right_arrow.png" alt="Siguiente" width="15" height="15"/>
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>