<div class="card-task <% if(session.currentUser.configuration.theme === "alegre") { if (t.subject_color) { %> <%= t.subject_color %> <% } else { %> <%= t.category_color %> <% } } %>">
    <% if(session.currentUser.configuration.theme === "alegre") { %>
        <a href="/tareas/tarea/<%= t.id %>" class="d-grid align-items-center" style="grid-template-columns: 25% 75%;">
            <div class="d-flex justify-content-center">
                <span style="font-size: 2rem;"><% if(t.subject_icon){ %>   <%- t.subject_icon %>  <% }else{ %>  <%- t.category_icon %>  <% }%></span>
            </div>
            <div class="d-flex justify-content-between">
                <span><%= t.title %></span>
                <span class="arrow-task-button">
                    <img src="/images/<%= session.currentUser.configuration.theme %>/right-arrow.png" alt="Siguiente" width="15"/>
                </span>
            </div>
        </a>
    <% } else { %>
        <a href="/tareas/tarea/<%= t.id %>">
            <div class="d-grid align-items-center" style="grid-template-columns: 25% 75%;">
                <div class="d-flex justify-content-center">
                    <img style="height: 30px; width: 30px;" src="/images/subjects-categories/<% if(t.subject_photo){ %><%= t.subject_photo %><% }else{ %><%= t.category_photo %><% }%>" alt="Icono categorÃ­a" width="15"/>
                </div>
                <div class="d-flex justify-content-between">
                    <span><%= t.title %></span>
                    <a href="/tareas/tarea/<%= t.id %>" class="arrow-task-button">
                        <img src="/images/<%= session.currentUser.configuration.theme %>/right-arrow.png" alt="Siguiente" width="15"/>
                    </a>
                </div>
            </div>
        </a>
    <% } %>
</div>