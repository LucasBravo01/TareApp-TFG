<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../public/utils/head.html") %>
    <!-- Importar CSS específicos -->
    <link rel="stylesheet" href="/css/listTasksStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="/css/dailyCalendar.css">
    <link rel="stylesheet" href="/css/weeklyCalendar.css">

    <!-- Importar JS específicos -->
    <script src="/js/home.js"></script>

</head>

<body data-response="<%= JSON.stringify(response) %>" data-day="<%= JSON.stringify(homeInfo.day) %>" data-week="<%= JSON.stringify(homeInfo.week) %>">
    <!-- Importar modal error -->
    <%- include("../public/utils/modal.html") %>
     
    <!-- Importar nav -->
    <%- include("nav", { generalInfo: generalInfo }) %>
    <div class="row">
        <div class="row mt-3">
            <div class="col-4 text-start">
                <a class="btnCreateTask" href="/tareas/crearTarea">
                    <span class="material-symbols-outlined">add_box</span>
                </a>
            </div>
        
            <div class="col-8 text-end"> 
                <a class="btn btnList" href="/">
                    <span class="material-symbols-outlined">view_list</span>
                </a>
                <a id="a-home-week" class="btn btnWeek" href="/semanal">
                    <span class="material-symbols-outlined">calendar_view_week</span>
                </a>
                
                <a id="a-home-daily" class="btn btnDay" href="">
                    <span class="material-symbols-outlined">calendar_view_day</span>
                </a>
            </div>
        </div>
        <% if (homeInfo.day) { %>
            <div class="container-fluid mt-4 calendar" id="daily-calendar-container">
                <div class="row">
                    <div class="col-2 hour-column">
                        <% for(let hour = 0; hour < 24; hour++) { %>
                            <div class="hour"><%= hour %>:00</div>
                        <% } %>
                    </div>
                    <div class="col-10">
                        <div class="row justify-content-between">
                            <div class="col-3 text-start">
                                <a id="a-previous-day" href="" class="btn">
                                    <span class="material-symbols-outlined">arrow_back</span>
                                </a>
                            </div>
        
                            <div class="day-header text-center col-6"><%= homeInfo.day.dayName %> <%= homeInfo.day.dayNumber %></div>
        
                            <div class="col-3 text-end">
                                <a id="a-next-day" href="" class="btn arrow">
                                    <span class="material-symbols-outlined">arrow_forward</span>
                                </a>
                            </div>
                        </div>
        
                       
                        <% for(let hour = 0; hour < 24; hour++) { %>
                            <div class="hour-tasks">
                                <% if (tasks[hour] && tasks[hour].length > 0) { %> 
                                    <% tasks[hour].forEach(task => { %>
                                        <div class="task" style="top: <%= (parseInt(task.time.split(':')[0]) * 45) + (parseInt(task.time.split(':')[1]) / 60) %>px">
                                            <!-- TODO Ver cómo quitar el style de arriba y ponerlo en el js o por css -->
                                            <div class="task-time-title">
                                                <div class="task-time"><%= task.time.slice(0, 5) %></div>
                                                <div class="task-title"><%= task.title %></div>
                                            </div>
                                        </div>          
                                    <% }) %>
                                <% } %>
                            </div>
                        <% } %>                
                    </div>
                </div>
            </div>
        <% } else if (homeInfo.week) { %>
            <div class="container-fluid mt-4 calendar" id="weekly-calendar-container">
                <div class="row">
                    <!-- Columna de horas a la izquierda -->
                    <div class="col-auto hour-column">
                        <% for(let hour = 0; hour < 24; hour++) { %>
                            <div class="hour"><%= hour %>:00</div>
                        <% } %>
                    </div>
                    
                    <div class="col">
                        <div class="row justify-content-between align-items-start">
                            <!-- Botón de semana anterior al inicio -->
                            <div class="col-auto">
                                <a id="a-previous-week" class="prevWeek btn arrow" href="">
                                    <span class="material-icons">arrow_back</span>
                                </a>
                            </div>
                            
                            <!-- Días de la semana -->
                            <div class="col">
                                <div class="row" id="weekly-calendar">
                                    <% homeInfo.week.forEach(day => { %>
                                        <div class="col day-column">
                                            <div class="day-header"><%= day.dayName[0] %> <%= day.dayNumber %></div>
                                            <% day.tasks.sort((a, b) => a.time.localeCompare(b.time)).forEach(task => { %>
                                                <!-- Calcula el top basándose en la hora de la tarea, asumiendo cada hora tiene una altura de 50px -->
                                                <div class="task" style="top: <%= (parseInt(task.time.split(':')[0]) * 50) + (parseInt(task.time.split(':')[1]) / 60 * 50) %>px">
                                                    <div class="task-time-title">
                                                        <div class="task-time"><%= task.time.slice(0, 5) %></div>
                                                        <div class="task-title"><%= task.title %></div>
                                                    </div>
                                                </div>                                        
                                            <% }) %>
                                        </div>                                
                                    <% }) %>                                                                                     
                                </div>
                            </div>
        
                            <!-- Botón de semana siguiente al final -->
                            <div class="col-auto">
                                <a id="a-next-week" class="nextWeek btn arrow" href="">
                                    <span class="material-icons">arrow_forward</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="contenedorTareas">
                <% tasks.forEach( t=> { %>
                    <a href="/tareas/tarea/<%= t.id %>">
                        <div class="tareaCard">
                            <div class="centrado">
                                <img src="/images/default/profile.png" height="50px">
                            </div>
                            <div>
                                <label class="labelText"> <%= t.title %></label>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        <% } %>

    </div>
        
        <!-- text to voice button -->
</body>

</html>